<div class="card">
  <div class="card-image">
    <figure>
      {{#if placemark.img}}
        <img src={{placemark.img}} style="height: 400px;" />
      {{/if}}
    </figure>
  </div>
  <div class="card-content">
    {{#if placemark.img}}
      <a href="/placemark/{{placemark._id}}/deleteimage" class="button is-danger is-light heading">Delete Image</a>
    {{else}}
      <form action="/placemark/{{placemark._id}}/uploadimage" method="POST" enctype="multipart/form-data">
        <div id="file-select" class="file has-name is-fullwidth">
          <label class="file-label">
            <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg" />
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
              </span>
            </span>
            <span class="file-name"></span>
          </label>
        </div>
        <br />
        <button type="submit" class="button is-info is-light heading is-fullwidth">Upload</button>
      </form>
    {{/if}}
  </div>
</div>
<script>
  const fileInput = document.querySelector(".file-input"); fileInput.onchange = () => { if (fileInput.files.length > 0) { const fileName = document.querySelector(".file-name");
  fileName.textContent = fileInput.files[0].name; } };
</script>