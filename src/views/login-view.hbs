{{> welcome-menu active="login"}}

<section class="section">
  <div class="box">
    <p class="title is-4">Log in</p>
  </div>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="heading">Email</label>
      <input class="input heading" type="text" placeholder="Enter email" name="email" />
    </div>
    <div class="field">
      <label class="heading">Password</label>
      <input class="input heading" type="password" placeholder="Enter Password" name="password" />
    </div>
    <div class="field is-grouped">
      <button class="button is-info is-light heading">Submit</button>
    </div>
  </form>
</section>